<?xml version="1.0" encoding="UTF-8"?>
<project default="generate" name="esir3.ima.twitter.compilator">
    <property name="ECLIPSE_HOME" value="../../../../eclipse/modeling-neon/eclipse"/>
    <property name="ECLIPSE_WORKSPACE" value="../../../../Projet_IMA"/>

    <!-- The classpath with only the dependencies used by the project -->
    <path id="esir3.ima.twitter.compilator.libraryclasspath">
        <pathelement location="${ECLIPSE_WORKSPACE}/esir3.ima.twitter.compilator/bin"/>
    </path>

    <path id="esir3.ima.twitter.compilator.classpath">
        <path refid="esir3.ima.twitter.compilator.libraryclasspath"/>
    </path>

    <!-- The classpath with only the jars available in the plugin folder of Eclipse -->
    <path id="esir3.ima.twitter.compilator.libraryclasspath.alljars">
        <pathelement location="../esir3.ima.twitter.compilator/bin"/>
        <fileset dir="${ECLIPSE_HOME}/plugins/" includes="*.jar"/>
    </path>

    <path id="esir3.ima.twitter.compilator.classpath.alljars">
        <path refid="esir3.ima.twitter.compilator.libraryclasspath.alljars"/>
    </path>

    <!-- The default task with the jars used by this project -->
    <target name="generate">
        <java classname="esir3.ima.twitter.compilator.common.Generate" classpathref="esir3.ima.twitter.compilator.classpath">
            <arg value="${model}"/>
            <arg value="${target}"/>
        </java>
    </target>

    <!--
        In case of problem you can also try with all the jar available in your Eclipse
        Keep in mind that having two versions of the same jar can create problems
    -->
    <target name="generate.alljars">
        <java classname="esir3.ima.twitter.compilator.common.Generate" classpathref="esir3.ima.twitter.compilator.classpath">
            <arg value="${model}"/>
            <arg value="${target}"/>
        </java>
    </target>
</project>
